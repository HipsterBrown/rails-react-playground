{
  "include": [
    "src",
    "types",
    ".storybook"
  ],
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "es2020",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "dist/",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "*": [
        "src/*",
        "node_modules/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "esModuleInterop": true,
    "experimentalDecorators": true
  }
}
